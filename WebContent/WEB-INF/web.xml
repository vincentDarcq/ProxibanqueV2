<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	<display-name>ProxibanqueV2</display-name>

	<servlet>
		<servlet-name>IndexServlet</servlet-name>
		<servlet-class>presentation.IndexServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>IndexServlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UpdateServlet</servlet-name>
		<servlet-class>presentation.UpdateServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UpdateServlet</servlet-name>
		<url-pattern>/update.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>TransferServlet</servlet-name>
		<servlet-class>presentation.TransferServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>TransferServlet</servlet-name>
		<url-pattern>/transfer.html</url-pattern>
	</servlet-mapping>
	
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/WEB-INF/views/error.jsp</location>
	</error-page>
	
	

</web-app>